<div id="item_tiles" class="col-md-12 list-group">
  <h1 class="page-header text-center">
    Deals for Lahore city only!
  </h1>
  <div class="paddtop-40">
    <div class="col-md-12">
      <div class="row">
        <% @deals.each do |deal| %>
          <div class="col-md-3">
            <div class="thumbnail">
              <%= image_tag(deal.main_image) %>
              <div class="caption">
                <h4 class="pull-right">Rs. <%= deal.price_after_discount %></h4>
                <h4><%= deal.title %></h4>
                <p>Total discount: <strong><%= deal.discount %>%</strong></p>
                <p><%= deal.description %></p>
                <p><strong>Rs. <%= deal.price_after_coins %> after using <%= deal.coins %> Coins</strong></p>
                <div class="paddtop-10">
                  <%= link_to 'View', deal_path(deal), class: 'btn btn-success' %>
                </div>
              </div>
              <div class="clearfix"></div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
