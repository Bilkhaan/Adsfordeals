<div id="item_tiles" class="col-md-12 list-group">
  <h1 class="page-header">
    Deals for Lahore city only!
  </h1>
  <% @deals.each do |deal| %>
    <div class="item col-md-3">
      <div class="thumbnail">
        <%= image_tag(deal.main_image) %>
        <div class="caption">
          <h4 class="group inner list-group-item-heading"><%= deal.title %></h4>
          <div class="row paddtop-20">
            <div class="col-xs-12 col-md-6">
              <p class="lead">Rs. <%= deal.price %></p>
            </div>
            <div class="col-xs-12 col-md-6">
              <%= link_to 'Buy', deal_path(deal), class: 'btn btn-success pull-right' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
